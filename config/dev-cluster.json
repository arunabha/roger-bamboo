{
  "Marathon": {
    "Endpoint": "http://daldevmesos01:8080,http://daldevmesos02:8080,http://daldevmesos03:8080"
  },

  "Bamboo": {
    "Endpoint": "http://localhost:8000",
    "Zookeeper": {
      "Host": "daldevmesos01,daldevmesos02,daldevmesos03",
      "Path": "/bamboo/state",
      "ReportingDelay": 5
    }
  },

  "HAProxy": {
    "TemplatePath": "$GO_ROOT/src/github.com/seomoz/roger-bamboo/config/haproxy_template.cfg",
    "OutputPath": "haproxy.cfg",
    "ReloadCommand": "service haproxy reload"
  },

  "StatsD": {
    "Enabled": false,
    "Host": "localhost:8125",
    "Prefix": "bamboo-server.development."
  }
}
